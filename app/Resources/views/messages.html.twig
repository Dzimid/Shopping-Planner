{% extends 'base.html.twig' %}

{% block body %}


    <a style="font-weight: bolder" class="placesLinkStyle" href="{{ path('place_page', {'id': app.request.attributes.get('id')}) }}">Powrót do miejsca</a>
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-3 well">
                <div class="well">
                    <p><a href="#">My Profile</a></p>
                    <img src={{ asset('bundles/app/img/profilePics/man.PNG') }} class="img-circle" height="65"
                         width="65" alt="Avatar">
                </div>
                <div class="well">

                </div>
                <div class="alert alert-success fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <p><strong>@!</strong></p>
                    Alert
                </div>
                <p><a href="#">Link</a></p>
                <p><a href="#">Link</a></p>
                <p><a href="#">Link</a></p>
            </div>
            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_start(form) }}
                        {{ form_row(form.message) }}
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>

                {% for msg in messages %}
                <div class="row">
                    <div class="col-sm-3">
                        <div class="well">
                            <p>{{ msg.author }}</p>
                            <img src={{ asset('bundles/app/img/profilePics/black.PNG') }} class="img-circle"
                                 height="55"
                                 width="55" alt="Avatar">
                            <p>{{ msg.date }}</p>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="well">
                            <p>{{ msg.content }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-sm-2 well map">
                <div class="thumbnail">

                </div>
                <div class="well">
                    <p>ADS</p>
                </div>
                <div class="well">
                    <p>ADS</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block slajder_container %}
    <div class="subpages_picture  text-center">
        <span class="font1">Shopping Planner</span>
    </div>
{% endblock %}

